    <!-- Inline JavaScript -->
    <script>
        // Smooth Scroll for Navigation Links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href'))
                        .scrollIntoView({ behavior: 'smooth' });
            });
        });

        // Skill Item Hover Effect
        const skillItems = document.querySelectorAll('.skill-item');
        skillItems.forEach(item => {
            item.addEventListener('mouseover', () => {
                item.style.backgroundColor = '#ffcc00';
                item.querySelector('p').style.color = '#1a1a1a';
            });
            item.addEventListener('mouseout', () => {
                item.style.backgroundColor = '#2a2a2a';
                item.querySelector('p').style.color = '#ffcc00';
            });
        });

        // Project Item Hover Effect
        const projectItems = document.querySelectorAll('.project-item');
        projectItems.forEach(item => {
            item.addEventListener('mouseover', () => {
                item.style.backgroundColor = '#ffcc00';
                item.querySelector('h3').style.color = '#1a1a1a';
                item.querySelector('p').style.color = '#1a1a1a';
            });
            item.addEventListener('mouseout', () => {
                item.style.backgroundColor = '#2a2a2a';
                item.querySelector('h3').style.color = '#ffcc00';
                item.querySelector('p').style.color = '#cccccc';
            });
        });
    </script>
